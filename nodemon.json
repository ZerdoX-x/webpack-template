{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "watch": [
    "webpack.config.base.js",
    "webpack.config.dev.js",
    "webpack.config.prod.js",
    "src/server",
    ".babelrc",
    ".browserslistrc",
    ".stylelintignore",
    ".stylelintrc",
    "package.json",
    "postcss.config.js"
  ],
  "events": {
    "restart": "echo \"App restarted due to:\n'$FILENAME'\""
  },
  "env": {
    "NODE_ENV": "development"
  }
}
